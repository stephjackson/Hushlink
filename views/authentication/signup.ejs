<div class="inner-form form-container">
  <div class="row">
    <div class="col-lg-6 col-10 m-auto">
      <h1>Get ready for a nicer, quieter world.</h1>
      <form action="/signup" method="POST">
        <div class="form-group">
          <label for="username">Username</label>
          <input class="form-control" type="text" name="username">
        </div>
      
        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control" type="password" name="password">
        </div>
      
        <button class="btn btn-hushlink btn-block mt-4" type="submit">Sign Up</button>
      </form>
      <p class="mt-2"><small>Already a member? <a class="hushlink-link" href="/login">Log in.</a></small></p>
    </div>
  </div>
</div>