<div id="container">
  <h2>@<%= username %>'s feed
  </h2>

  <% hushes.forEach(function(hush) { %>
    <div>
      <a href="<%= hush.hush %>">
        <%= hush.hush %>
      </a>
      <p>
        <span>
          <a href="/<%= hush.username %>">
            @<%= hush.username %>
          </a>
          <% if (session !== undefined) { %>
            <form action="/<%= hush.username %>/follow" method="POST">
              <button><%= buttonText %></button>
            </form>
          <% } %>
        </span>
        <br>
        <%= moment(hush.created_at).format('LL, LTS') %>
      </p>
    </div>
  <% }) %>
  <form action="/hushes" method="POST" id="new-hush">
    <input type="url" name="hushUrl" placeholder="What should we see?">
    <button>Hush!</button>
  </form>

  <% if (typeof(errorMessage) != "undefined") { %>
    <div>
      <%= errorMessage %>
    </div>
  <% } %>

</div>